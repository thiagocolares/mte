	<queryString>
		<![CDATA[SELECT cdbr_supervisor, nome_dds, pontuacao_final, concat(pat.cdbr,' – ',pat.nome) as patrocinador FROM(

SELECT dds.idDds, dds.cdbr as cdbr_supervisor, dds.nome as nome_dds, dds.idPatrocinador id_patrocinador, floor((SUM(pnt.valor) + bon.valor)/600)*600 as pontuacao_final
      FROM atlantida.dds dds
      INNER JOIN atlantida.venda vnd ON dds.idDds = vnd.idDds
      INNER JOIN atlantida.pontuacao pnt ON vnd.idVenda = pnt.idVenda
      RIGHT JOIN atlantida.bonus bon ON dds.idDds = bon.idDds
      WHERE DATE_FORMAT(vnd.dataVenda, '%m/%Y') = DATE_FORMAT('2011-06-01', '%m/%Y')
      AND bon.mes = 06 AND bon.ano = 2011
      GROUP BY dds.cdbr
      )
as interno INNER JOIN atlantida.dds pat ON id_patrocinador = pat.idDds;]]>
	</queryString>
